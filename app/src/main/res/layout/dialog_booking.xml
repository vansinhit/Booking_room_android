<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Booking"
            android:layout_gravity="center"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_booking_room_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Your Email"
            android:enabled="false"
            android:background="@drawable/edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_booking_room_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Room Name"
            android:enabled="false"
            android:background="@drawable/edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_booking_room_apartment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Apartment"
            android:inputType="number"
            android:enabled="false"
            android:background="@drawable/edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_booking_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Date"
            android:inputType="date"
            android:background="@drawable/edit"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/et_booking_time_from"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:hint="07:00"
                    android:inputType="time"
                    android:background="@drawable/edit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/et_booking_time_to"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:hint="10:00"
                    android:inputType="time"
                    android:background="@drawable/edit"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:id="@+id/btn_booking_room_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
        <Button
            android:id="@+id/btn_booking_room_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"/>
    </LinearLayout>

</LinearLayout>